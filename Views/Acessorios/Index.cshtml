<!--Namespace da classe de Modelo para esta view-->
@model IEnumerable<PersonalMVC.Models.AcessorioViewModel>
<!--Inclua os TempData para Sucesso e Erro aqui, conforme exemplo na view de Autenticação-->@{
    ViewBag.Title =
        "Acessorios";
}<!--Título da página para o navegador-->
<h2>Relação de Acessorios</h2><!--Título da página-->
<p> <!--Links apontando para views na mesma pasta-->
    @Html.ActionLink("Criar Novo Acessorio", "Create")
</p>
<table class="table">
    <tr><!--Títulos das colunas da tabela-->
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.TipoAcessorios)</th>
        <th>@Html.DisplayNameFor(model => model.Marca)</th>
        <th>@Html.DisplayNameFor(model => model.Descricao)</th>
        <th>@Html.DisplayNameFor(model => model.Valor)</th>
    </tr>
    <!--Looping para escrever os dados na tabela-->
    @foreach (var item in Model)
    {
        <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoAcessorios)</td>
                <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                <td>@Html.DisplayFor(modelItem => item.Valor)</td>

              <td><!--Coluna para Links/botões-->
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id }
                   ,new {onclick = "return confirm('Deseja realmente deletar este Acessorio?');"})
            </td>
        </tr>
    }
</table>